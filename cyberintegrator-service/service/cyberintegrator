#! /bin/sh

start() {
  NOW=$(date +"%Y-%m-%d")
  su -c "/usr/bin/java -Dlog4j.configuration=file:///home/cyberintegrator/log4j.properties -jar /home/cyberintegrator/jetty-runner.jar --port 9093 --out /home/cyberintegrator/cyberintegrator-$NOW.log /home/cyberintegrator/jetty.xml" cyberintegrator &
  echo $! > /var/run/cyberintegrator.pid
}

stop() {
  pid=`cat /var/run/cyberintegrator.pid`
  kill $pid
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    start
    ;;
esac
exit 0
