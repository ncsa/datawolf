<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>edu.illinois.ncsa</groupId>
	<version>3.0.0-SNAPSHOT</version>
	<artifactId>cyberintegrator-parent</artifactId>
	<packaging>pom</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<spring.framework>3.1.1.RELEASE</spring.framework>
		<spring.data>1.3.0.M1</spring.data>
		<spring.jpa>1.1.0.RC1</spring.jpa>
		<spring.mongo>1.1.0.M1</spring.mongo>
		<slf4j>1.6.4</slf4j>
		<hibernate>4.1.1.Final</hibernate>
		<hsql>1.8.0.10</hsql>
		<junit>4.10</junit>
	</properties>

	<repositories>
		<repository>
			<id>spring-milestone</id>
			<name>Spring Maven MILESTONE Repository</name>
			<url>http://repo.springsource.org/libs-milestone</url>
		</repository>
	</repositories>

	<scm>
		<connection>https://opensource.ncsa.illinois.edu/fisheye/git/cyberintegrator.git</connection>
		<url>https://opensource.ncsa.illinois.edu/fisheye/browse/cyberintegrator</url>
	</scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>releases</id>
			<url>https://opensource.ncsa.illinois.edu/nexus/content/repositories/releases</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<name>Internal Snapshots</name>
			<url>https://opensource.ncsa.illinois.edu/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>


	<modules>
		<module>../cyberintegrator-domain</module>
		<module>../cyberintegrator-springdata</module>
		<module>../cyberintegrator-core</module>
		<module>../cyberintegrator-executor-java-tool</module>
		<module>../cyberintegrator-executor-java</module>
		<module>../cyberintegrator-tool-example</module>
	</modules>
</project>
